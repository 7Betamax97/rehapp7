<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/rectangle4"
    tools:context=".activity_inicio_sesion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="193dp"
                android:layout_height="91dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/logo_iniciosesion" />

            <ImageView
                android:id="@+id/image_nombre_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rehappnombre_iniciosesion"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="80dp" />

            <EditText
                android:id="@+id/text_Nombre_inicio"
                android:layout_width="230dp"
                android:layout_height="49dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border"
                android:drawableStart="@drawable/vector_nombre_inicio"
                android:paddingStart="15dp"
                android:paddingEnd="25dp"
                android:hint="@string/nombre_usuario"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/tex_Contraseña_inicio"
                android:layout_width="230dp"
                android:layout_height="49dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border"
                android:drawableStart="@drawable/vector_pass_inicio"
                android:paddingStart="15dp"
                android:paddingEnd="25dp"
                android:hint="@string/pass_usuario"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="20dp" />


            <Button
                android:id="@+id/ButtonLinkCuenta"
                android:layout_width="185dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="inicio sesion"
                android:textColor="@color/white"
                android:backgroundTint="@color/botones_amarillos_inicio_sesion" />

            <Button
                android:id="@+id/ButtonLinkRegistro"
                android:layout_width="185dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="registro paciente"
                android:textColor="@color/white"
                android:backgroundTint="@color/botones_amarillos_inicio_sesion" />

            <Button
                android:id="@+id/ButtonRegistroFisio"
                android:layout_width="185dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:textSize="13sp"
                android:text="registro fisioterapeuta"
                android:textColor="@color/white"
                android:backgroundTint="@color/botones_amarillos_inicio_sesion" />

            <TextView
                android:id="@+id/textViewOr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="---------  or  ---------"
                android:textSize="18dp"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/imageButtonFaceboock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/iconofaceboock" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewOlvideContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Forgot password?"
                android:textSize="14dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>