<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/fondomodulo1_2"
    tools:context=".activity_modulo12">

    <TextView
        android:id="@+id/textViewtitulo_modulo1ejercicio3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="Modulo 1.3"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/textViewNombreEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desviación Radial y Cubital de la Muñeca"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold|italic" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <VideoView
                android:id="@+id/video_ejercicio3"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:background="@color/white">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/imageNombreEjercicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_ejercicio" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp">

                        <TextView
                            android:id="@+id/textView_completo_modulo1_ejercicio3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="complete"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textView_ejercicio3_modulo1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ejercicio 3:"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView_descripcion_modulo1_ejercicio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:text="@string/descripcion_modulo1ejercicio3"
                    android:textSize="12sp"
                    android:textColor="@color/black" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="30dp">

                <ImageButton
                    android:id="@+id/imageButton_retroceder_modulo1.3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/retroceder_en_modulo"
                    android:backgroundTint="@color/fondoModulosRosado"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"/>

                <ImageButton
                    android:id="@+id/imageButton_nombre_modulo1.3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/nombre_modulos"
                    android:backgroundTint="@color/fondoModulosRosado"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"/>

                <ImageButton
                    android:id="@+id/imageButton_avanzar_modulo1.3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/avanzar_en_modulos"
                    android:backgroundTint="@color/fondoModulosRosado"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>