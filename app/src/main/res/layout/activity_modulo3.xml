<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/fonfo_modulo1"
    tools:context=".modulo1">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Modulo 3"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="flexion y extension de muÃ±eca"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold|italic" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <VideoView
                android:id="@+id/video_ejercicio1"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:background="@color/white">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/imagefoto_fisio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_ejercicio" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp">

                        <TextView
                            android:id="@+id/textViewFisioVirtual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="complete"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textViewCompletaNotificaciones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ejercicio :"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewCompletaNotificaciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/descripcion_modulo1_ejercicio1"
                    android:textSize="12sp"
                    android:textColor="@color/black" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/fondo_barranavegacion"
            android:gravity="center"
            android:padding="16dp"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/nav_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"
                android:background="@android:color/transparent"
                android:contentDescription="@string/ic_home" />

            <ImageButton
                android:id="@+id/nav_calendario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendario"
                android:background="@android:color/transparent"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp" />

            <ImageButton
                android:id="@+id/nav_playCalendario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_atras"
                android:background="@android:color/transparent"
                android:contentDescription=""
                android:layout_marginLeft="3dp"
                android:layout_marginRight="32dp" />

            <ImageButton
                android:id="@+id/nav_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_adelante"
                android:background="@android:color/transparent"
                android:contentDescription="@string/ic_atras" />

            <ImageButton
                android:id="@+id/nav_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_perfil"
                android:background="@android:color/transparent"
                android:contentDescription="@string/ic_perfil"
                android:layout_marginLeft="32dp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>